cronJob = require('cron').CronJob

module.exports = (robot) ->

 robot.respond /who am I/i, (msg) ->
  msg.send "You are #{msg.message.user.name}"

 robot.respond /who are you/i, (msg) ->
   msg.send "I'm loanbot!!"

 robot.hear /(kinri|金利|きんり|利息|risoku)/i, (msg) ->
   msg.send msg.random ["あなたの現在の金利は0%です"]

 robot.hear /(借りたい|かりたい|借入|借り入れ)/i, (msg) ->
   msg.send msg.random ["まだ100万までお貸しできます"]

 robot.hear /(sushi|すし|スシ|寿司)/i, (msg) ->
   msg.send msg.random ["スシが食べたい。", "寿司?", "Yes, we like sushi"]

 robot.hear /badger/i, (res) ->
   res.send "Badgers? BADGERS? WE DON'T NEED NO STINKIN BADGERS"

 robot.hear /I like pie/i, (res) ->
   res.emote "makes a freshly baked pie"

 new cronJob
   cronTime: "00 00 9 * * 3"
   onTick: ->
     robot.send {room: "random"}, "坂本さん、向山さんに借りてる1,000円返してください"
     return
   start: true
   timeZone: "Asia/Tokyo"
